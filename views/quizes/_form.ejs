<label for='preg' class='rem'>Pregunta:</label>
<input type='text' id='preg' name='quiz[pregunta]' value='<%= quiz.pregunta %>' maxlength='255' />

<label for='resp' class='rem clear'>Respuesta:</label>
<input type='text' id='resp' name='quiz[respuesta]' value='<%= quiz.respuesta %>' maxlength='255' />

<label for='tema' class='rem clear'>Tem√°tica:</label>
<select id='tema' name='quiz[id_tema]'>
<% for (var i = 0; i < subjects.length; i++) { %>
  <% if (quiz.id_tema === subjects[i].id) { %>
  <option value='<%= subjects[i].id %>' selected>
  <% } else { %>
  <option value='<%= subjects[i].id %>'>
  <% } %>

    <%= subjects[i].tema %>
  </option>
<% } %>
</select>

<p class='clear'>
  <a href='/quizes'><button type='button'>Cancelar</button></a>
  <input type='submit' value='Guardar' />
</p>
<script>
  window.onload = function() {
    document.getElementById('preg').select().focus();
  }
</script>